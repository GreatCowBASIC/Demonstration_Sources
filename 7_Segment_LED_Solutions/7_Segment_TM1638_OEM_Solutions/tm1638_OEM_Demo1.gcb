Sub Flash_Digs
' Flash_Digit
    cnt1 = 4
    Do while cnt1 > 0
     tmFlashDig(1)
    cnt1--
    Loop
    Wait 1 s

' Flash_Digits
    cnt1 = 4
    Do while cnt1 > 0
     tmFlashDig(3,3)
    cnt1--
    Loop
    Wait 1 s

' Flash_Segment
    cnt1 = 4
    Do while cnt1 > 0
     tmFlashSeg(5,8)   ' segment 8 is dp - (seg is toggled)
    cnt1--
    Loop
    Wait 1 s

End Sub

