Sub Bright_Test1
  tmCLRbuf : tmCLRdisp
Dim Rev as Bit
    TM_Bright = 0 : Rev = 0
    tmSndStr("bright")
      Wait 1 s
  Do
   ' tmctrlSnd
    tmSndDec(TM_Bright,TM_DispLen,1)
