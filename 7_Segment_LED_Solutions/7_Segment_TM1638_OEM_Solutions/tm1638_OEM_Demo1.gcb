Sub SetSeg2
Dim Digit, Segment as byte
    tmCLRbuf : tmCLRdisp
    tmSegBuf(3,1,On,,On)
    wait 400 ms
    tmSegBuf(3,2,On,,On)
    wait 400 ms
    tmSegBuf(3,3,On,,On)
    wait 500 ms
    tmSegBuf(3,4,On,,On)
    wait 800 ms

    Digit = 4
    Segment = 1
    tmSegBuf(Digit,Segment,On)
    wait 400 ms
    Segment = 2
    tmSegBuf(Digit,Segment,On)
    wait 400 ms
    Segment = 3
    tmSegBuf(Digit,Segment,On)
    wait 500 ms
    Segment = 4
    tmSegBuf(Digit,Segment,On)
    tmSndBuf

    wait 2 s
    tmCLRbuf : tmCLRdisp
