                      end if

                      'Misc
                      if Letter = 32 then
                                wait 30 10ms
                      end if
            next
  End Sub

  '''Send a Morse Code dot
  Sub Dot
            Tone CodeFrequency, DotLength
            wait DotSpace 10ms
  End Sub

  '''Send a Morse Code bar
  Sub Bar
            Tone CodeFrequency, BarLength
            wait BarSpace 10ms
  End Sub
