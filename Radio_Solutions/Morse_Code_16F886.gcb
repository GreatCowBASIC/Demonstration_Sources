                                Dot
                                Dot
                      end if
                      if Letter = 69 then
                                Dot
                      end if
                      if Letter = 70 then
                                Dot
                                Dot
                                Bar
                                Dot
                      end if
                      if Letter = 71 then
                                Bar
                                Bar
                                Dot
                      end if
                      if Letter = 72 then
                                Dot
                                Dot
                                Dot
                                Dot
                      end if
                      if Letter = 73 then
                                Dot
                                Dot
                      end if
                      if Letter = 74 then
                                Dot
                                Bar
                                Bar
                                Bar
                      end if
                      if Letter = 75 then
                                Bar
                                Dot
                                Bar
                      end if
                      if Letter = 76 then
                                Dot
                                Bar
                                Dot
                                Dot
                      end if
                      if Letter = 77 then
