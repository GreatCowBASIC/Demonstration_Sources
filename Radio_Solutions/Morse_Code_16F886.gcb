                                Dot
                      end if
                      if Letter = 83 then
                                Dot
                                Dot
                                Dot
                      end if
                      if Letter = 84 then
                                Bar
                      end if
                      if Letter = 85 then
                                Dot
                                Dot
                                Bar
                      end if
                      if Letter = 86 then
                                Dot
                                Dot
                                Dot
                                Bar
                      end if
                      if Letter = 87 then
                                Dot
                                Bar
                                Bar
                      end if
                      if Letter = 88 then
                                Bar
                                Dot
                                Dot
                                Bar
                      end if
                      if Letter = 89 then
