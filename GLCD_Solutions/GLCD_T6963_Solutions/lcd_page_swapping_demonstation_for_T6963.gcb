Sub LCDBox

                Dim Xposition, Yposition as byte
                locate 20, 4
                Print "Put ( row, column, ascii character )"
                for Yposition = 0 to MAX_ROWS -1
                    put Yposition, 0, "*"
                    wait 10 ms
                next
                for Xposition = 0 to MAX_COLUMNS -1
                    put 0, Xposition ,"*"
                    put MAX_ROWS -1, Xposition, "*"
                    wait 10 ms
                next
                for Yposition = 0 to MAX_ROWS -1
                    put Yposition, MAX_COLUMNS -1 , "*"
                    wait 10 ms
                next

End Sub
