'Chip settings
' Select the chip and the chip speed
#CHIP 16F1789, 32
#OPTION Explicit

' Set ports
' Set the portd as outputs
Dir portd Out
' Set the initial value of the state of the LEDs
Set portd = 255



' Set required variables
Dim DDELAY As Byte
' Set the delay for the LEDs
ddelay = 125


Repeat 5

    'Turn off LED's on port D
    PORTD=0xFF
    'wait
    Wait 125 ms

    ' Turn on LED's on port D
    PORTD=0x00
    'wait
    Wait 125 ms
End Repeat

'Turn off LED's on port D
PORTD=0xFF
'wait
Wait 125 ms

' Loop forever
Do Forever

    ' Repeat this loop 8 times
    Repeat 8
        ' Rotate the portD to the left, shifting Carry Bit (equals 0 to first port)
        Rotate PORTD Left
        ' wait
        Wait ddelay ms

        ' Loop
    End Repeat
    Wait ddelay ms

    ' Repeat this loop 7 times, 7 prevents a double flash of one of the LEDs
    Repeat 7
        ' Rotate the portD to the right.
        Rotate PORTD Right
        ' wait
        Wait ddelay ms
        ' loop
    End Repeat

    ' reinitialise the port
    Set portd = 255
    ' ensure the Carry Bit is 0
    Set C Off

    ' loop forever
Loop
