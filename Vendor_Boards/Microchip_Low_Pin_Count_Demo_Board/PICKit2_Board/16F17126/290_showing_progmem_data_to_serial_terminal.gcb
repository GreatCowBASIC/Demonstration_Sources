    #startup InitPPS, 85
    #define PPSToolPart 16F17126

    Sub InitPPS

            'Module: UART pin directions
            Dir PORTC.4 Out    ' Make TX1 pin an output
            'Module: UART1
            RC4PPS = 0x13          'RC4->EUSART1:TX1

    End Sub
